<div class="container">
    <a href="<%= products_path %>" class="btn btn-secondary">Back</a><br />
    <% if @product.image.attached? %>  
    <img src="<%= url_for(@product.image) %>" alt="Product Image" class="w-75">
    <% end %>
    <h2><%= @product.name %></h2>
    <p><%= @product.description %></p>
    <p><b>Price:</b><%= @product.price %></p>
    <b>Category:<% @product.categories.each do |cat|%>  <%= cat.name %>   <% end %></b>
    <ul>
  
    </ul>
</div>