<%= form_with model: @product, local: true do |form| %>
 <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" %>
  </p>
  <p class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description,rows: 10,cols: 20, class: "form-control" %>
  </p>
  <p class="form-group">
    <%= form.label :price %><br>
    <%= form.text_field :price, class: "form-control" %>
  </p>
  <p class="form-group">
    <%= form.file_field :image %>
  </p>
    <%= form.collection_check_boxes :categories, Category.all, :id, :name do |b| %>
      <% b.label(class: "checkbox-inline input_checkbox") {b.check_box(class: "checkbox ml-2 mr-2") + b.text } %>
    <% end %>
  <p>
    <%= form.submit  class: "btn btn-info btn-lg" %>
  </p>

<% end %>