<% if @category %>
  <h1><%= @category.name %></h1>
<% end %>
<% if @products.any? %>
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-12 col-sm-6 col-lg-4">
      <div class="card mb-4 mt-3 w-100 h-100">
         <% if product.image.attached? %>
            <img src="<%= url_for(product.image) %>" alt="product_img" height="270px">
         <% end %>
        <div class="card-body">  
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
            <p><b>Price:<%= number_to_currency(product.price) %></b></p>
            <hr>
        </div>
        <div class="card-footer">
          <div class="text-right">
            <%= link_to 'View Product', product_path(product), class: "mr-2" %>
            <%= button_to 'Add To Cart', line_items_path(product_id: product), class: "mr-2 btn btn-secondary" %>
          </div>
        </div>
        </div>
    </div>
  <% end %>
  </div>
<% else %>
  <h3>No Products Found</h3>
<% end %>